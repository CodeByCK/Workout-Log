<!-- Add image and link to each profile -->

<div class="container-fluid mt-3">
  <div class="row">
    <div class="col-md-2 mb-5">
      <ul class="nav flex-column nav-pills">
        <li class="nav-item">
          <a class="nav-link" href="/dashboard">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/routine">Routines</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/community">Community</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/weightCalculator">Weight Loss Calculator</a>
        </li>
      </ul>
    </div>
    <div class="col-md-10 text-center">
      <h1 class="text-center text-primary"> Community</h1>
      <div class="container">
        <div class="row text-center mb-5">
          {{#each allUsers}}
          <div class="col-xs-2 text-center">
            <div class="user">
              {{#if this.img}}
              <img class="user-img" src="{{this.img}}" alt="">
              {{else}}
              <img class="user-img"
                src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                alt="">
              {{/if}}
              <h3 class="lead" align='center'>
                {{this.displayName}}
              </h3>
              <a href="/profile/{{_id}}">View Profile</a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>