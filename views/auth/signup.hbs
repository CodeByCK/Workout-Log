<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Create an account</h5>
                    <form class="form-signin text-center" action="/signup" method="POST">
                        <div class="form-label-group">
                            <input type="text" name="displayName" class="form-control mt-2" placeholder="Display Name"
                                required autofocus>
                        </div>
                        <div class="form-label-group">
                            <input type="text" name="username" class="form-control mt-2" placeholder="Username" required
                                autofocus>
                        </div>
                        <div class="form-label-group" style="display:none">
                            <input type="text" name="location" class="form-control mt-2" placeholder="location"
                                autofocus>
                        </div>
                        <div class="form-label-group" style="display:none">
                            <input type="text" name="training" class="form-control mt-2" placeholder="training"
                                autofocus>
                        </div>
                        <div class="form-label-group" style="display:none">
                            <input type="text" name="goal" class="form-control mt-2" placeholder="goal">
                        </div>
                        <div class="form-label-group" style="display:none">
                            <input type="text" name="bio" class="form-control mt-2" placeholder="bio">
                        </div>
                        <div class="form-label-group" style="display:none">
                            <input type="text" name="img" class="form-control mt-2" placeholder="img">
                        </div>
                        <div class="form-label-group">
                            <input type="password" id="inputPassword" class="form-control mt-2" name="password"
                                placeholder="Password" required>
                            <br>
                        </div>
                        <button class="btn btn-lg btn-primary text-uppercase btn-create" type="submit">Create
                            account</button>
                        <hr class="my-4">
                        <p class="account-message">
                            Have an account? <a href="/login">Log In</a>
                        </p>
                        {{#if errorMessage }}
                        <div class="error-message">{{ errorMessage }}</div>
                        {{/if}}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>