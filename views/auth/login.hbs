<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    <form class="form-signin text-center" action="/login" method="POST">
                        <div class="form-label-group">
                            <input type="text" id="inputEmail" name="username" class="form-control mt-2"
                                placeholder="Username" required autofocus>
                        </div>
                        <div class="form-label-group">
                            <input type="password" id="inputPassword" class="form-control mt-2" name="password"
                                placeholder="Password" required>
                            <br>
                        </div>
                        <button class="btn btn-lg btn-primary text-uppercase btn-login" type="submit">Sign
                            in</button>


                        <hr class="my-4">
                        <p class="account-message">
                            Don't have an account? <a href="/signup">Sign up</a>
                        </p>
                        {{#if errorMessage }}
                        <div class="error-message">{{ errorMessage }}</div>
                        {{/if}}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>