<h1>ALL YOUR ROUTINES</h1>

<ul>
  {{#each routines}}
  <li>
    <a href="/routine/{{this._id}}/show">{{this.name}}</a>
    <a href="/routine/delete?id={{this._id}}" class="edit-button">DELETE</a>
    <a href="/routine/edit?id={{this._id}}" class="edit-button">EDIT</a>

    <br>
    <i>{{this.description}}</i>
  </li>
  {{/each}}
</ul>
{{!-- <a href="/routine/new">ADD</a> --}}

<form action="/routine/new" method="POST">
  <input type="text" name="name" placeholder="Name"><br>
  <input type="text" name="description" placeholder="Description"><br>
  <button type="submit">SUBMIT</button>
</form>